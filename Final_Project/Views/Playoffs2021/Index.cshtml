<main id="tournament">
    <section class="container">
        <div class="flexleft">
            <h4>Quarter Finals</h4>
            <span class="spacer">&nbsp;</span>
           
            <div>
                <div class="helper">
                    <span>@Model.Left.FirstGame.TopTeam.Team</span>
                    <div class="game">
                        <hr class="brlines" />
                        @Model.Left.FirstGame.BotTeam.Team
                        <hr class="brlines" />
                    </div>
                </div>
                <div class="helper">
                    <span> @Model.Left.SecondGame.TopTeam.Team</span>
                    <div class="game">
                        <hr class="brlines" />
                        @Model.Left.SecondGame.BotTeam.Team
                        <hr class="brlines" />
                   
                    </div>
                </div>
                <div class="helper">
                    <span>@Model.Left.ThirdGame.TopTeam.Team</span>
                    <div class="game">
                        <hr class="brlines" />
                        @Model.Left.ThirdGame.BotTeam.Team
                        <hr class="brlines" />
                  
                    </div>
                </div>
                <div class="helper">
                    <span>@Model.Left.FourthGame.TopTeam.Team</span>
                    <div class="game">
                        <hr class="brlines" />
                        @Model.Left.FourthGame.BotTeam.Team
                        <hr class="brlines" />
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="flexmid">

            <h4>Semi-Finals</h4>
            <span class="spacer">&nbsp;</span>
            <span class="spacer">&nbsp;</span>
            <span class="spacer">&nbsp;</span>

            <div class="helper">
                <span class="gmspacer">&nbsp;</span>
                <span>@Model.Middle.TopGame.TopTeam.Team</span>
                <div class="game">
                    <hr class="brlines" />
                    @Model.Middle.TopGame.BotTeam.Team
                    <hr class="brlines" />
               
                </div>
            </div>
            <div class="helper">
                <span class="gmspacer">&nbsp;</span>
                <span>@Model.Middle.BotomGame.TopTeam.Team</span>
                <div class="game">
                    <hr class="brlines" />
                    @Model.Middle.BotomGame.BotTeam.Team
                    <hr class="brlines" />
                
                </div>
            </div>
        </div>

        <div class="flexright">

            <H4 style="color:gold">Chamionship Game</H4>
            <span class="spacer">&nbsp;</span>
            <span class="spacer">&nbsp;</span>
            <span class="spacer">&nbsp;</span>

            <div class="right">
                <div class="helper">
                    <span>@Model.Right.Finals.TopTeam.Team</span>
                    <div class="game">
                        <hr class="brlines" />
                        @Model.Right.Finals.BotTeam.Team
                        <hr class="brlines" />
                    </div>
                </div>
            </div>
        </div>
